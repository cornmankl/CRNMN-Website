# Production environment variables
# IMPORTANT: Replace these placeholder values with your actual production keys
# These should be set in your Vercel dashboard under Project Settings > Environment Variables

# AI Service Configuration (Required for AI features)
VITE_GEMINI_API_KEY=your_production_gemini_api_key_here
VITE_OPENAI_API_KEY=your_production_openai_api_key_here
VITE_ANTHROPIC_API_KEY=your_production_anthropic_api_key_here
VITE_GLM_API_KEY=your_production_glm_api_key_here

# Supabase Configuration (Required for database functionality)
VITE_SUPABASE_URL=your_production_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_production_supabase_anon_key

# Stripe Configuration (Required for payment processing)
VITE_STRIPE_PUBLISHABLE_KEY=your_production_stripe_publishable_key

# Firebase Configuration (Required for authentication and analytics)
VITE_FIREBASE_API_KEY=your_production_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_production_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_production_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_production_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_production_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_production_firebase_app_id

# Analytics Configuration
VITE_GA_MEASUREMENT_ID=your_production_google_analytics_measurement_id

# AI Configuration
VITE_AI_DEFAULT_MODEL=gemini-pro
VITE_AI_MAX_TOKENS=2000
VITE_AI_TEMPERATURE=0.7
VITE_AI_ENABLE_IMAGE_GENERATION=true
VITE_AI_ENABLE_WEBSITE_MODIFICATION=false

# Rate Limiting (Adjust based on your needs)
VITE_AI_RATE_LIMIT_CHAT_USER=50
VITE_AI_RATE_LIMIT_CHAT_PREMIUM=200
VITE_AI_RATE_LIMIT_CHAT_ADMIN=1000
VITE_AI_RATE_LIMIT_IMAGE_USER=5
VITE_AI_RATE_LIMIT_IMAGE_PREMIUM=50
VITE_AI_RATE_LIMIT_IMAGE_ADMIN=200

# App Configuration
VITE_APP_NAME=CRNMN
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=production

# API Configuration
VITE_API_BASE_URL=https://api.your-domain.com
VITE_APP_URL=https://your-domain.com

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true